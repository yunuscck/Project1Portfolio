﻿﻿@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Project1Portfolio.Models.Skill>

@{
    ViewBag.Title = "SkillList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yeteneklerin Listesi</h2>
Buraya yetenekler gelecek

<table class=" table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Değer</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillId</td>
            <td>@item.Title</td>
            <td>@item.Value</td>
            <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("SkillList", new { page }))

@Html.Action("PartialSkillChart","Skill")

<style>
    .pagination {
        display: flex;
        list-style-type: none;
        padding: 0;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a, .pagination li span {
                display: block;
                padding: 8px 16px;
                border: 1px solid #ddd;
                text-decoration: none;
                color: #333;
            }

                .pagination li a:hover {
                    background-color: #f2f2f2;
                    border-color: #333;
                }

            .pagination li.active span {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .pagination li.disabled span {
                color: #ccc;
            }
</style>
<td><a href="/Skill/CreateSkill/" class="btn btn-info">Yeni Yetenek Girişi</a></td>