@model List<Project1Portfolio.Models.Testimonial>
<style>
    .testimonial-image {
        object-fit: cover !important;
        max-width: 100%;
        width: 100%;
        max-height: 100%;
        object-position: top;
    }
</style>
<div class="container-fluid" id="testimonial">
    <div class="">
        <div class="row g-0">
            <div class="col-lg-2">
                <div class="testimonial-header h-100 bg-dark pt-6 pe-6 pb-6">
                    <div class="text-start d-flex flex-column justify-content-center wow fadeInUp" data-wow-delay="0.1s">
                        <p class="text-white sub-title">Referanslar</p>
                        <h1 class="display-6 text-white mb-0">Hakkımda Söylenenler...</h1>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="testimonial-content h-100 pt-6 ps-6 pb-6">
                    <div class="testimonial-carousel owl-carousel bg-light wow fadeInUp" data-wow-delay="0.1s">
                        @foreach (var item in Model)
                        {
                            <div class="testimonial-item" data-dot="<img class='img-fluid' src='@item.ImageUrl' alt=''>">
                                <div class="row gy-4 gx-2 mb-4">
                                    <div class="col-sm-6">
                                        <div class="d-flex justify-content-sm-end">
                                            <div class="testimonial-inner-img border border-primary border-3 me-4" style="width: 100px; height: 100px;">
                                                <img src="@item.ImageUrl" class="testimonial-image" style="object-fit: contain;" alt="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div>
                                            <h5 class="mb-2">@item.Name</h5>
                                            <p class="mb-0">@item.Title</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-sm-center">
                                    <p>
                                       @item.Comment
                                    </p>
                                    <div class="d-flex justify-content-sm-center">
                                        <i class="fas fa-star text-primary"></i>
                                        <i class="fas fa-star text-primary"></i>
                                        <i class="fas fa-star text-primary"></i>
                                        <i class="fas fa-star text-primary"></i>
                                        <i class="fas fa-star text-primary"></i>
                                    </div>
                                </div>
                            </div>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
